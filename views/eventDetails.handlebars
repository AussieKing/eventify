{{! The template for displaying the details of a specific event. }}

{{!-- {{#each events}} and {{/each}} are Handlebars.js block helpers used to iterate over the events array passed from the controller. --}}
<div class="event-list">
  {{#each events}}
    <div class="event">
      <h3>{{title}}</h3>
      <p>{{description}}</p>
      <p>Date: {{date}}</p>
      <p>Location: {{location}}</p>
    </div>
  {{/each}}
</div>

<!-- event-details.handlebars -->
<div class="event-details">
  <h2>{{event.title}}</h2>
  <p>{{event.description}}</p>
  <p>Date: {{event.date}}</p>
  <p>Location: {{event.location}}</p>
</div>
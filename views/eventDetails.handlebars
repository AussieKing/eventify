{{! The template for displaying the details of a specific event. }}
<body class="container" style="background-color:rgb(255, 162, 0)">

  {{!-- {{#each events}} and {{/each}} are Handlebars.js block helpers used to iterate over the events array passed from the controller. --}}
  <h1></h1>

  {{#each event}}
    <div style="margin: 20px;" class="event">
      <h3 style="margin: 20px;">{{event_title}}</h3>
      <p>{{event_description}}</p>
      <p>📅 {{time}}</p>
      <p>📍Location: {{location}}</p>
    </div>
  {{/each}}

  {{eventlist}}
  {{event_title}}

</body>